@import 'nib'
@import '_colors'


/*      FONTS        */
@font-face
  font-family: styled
  src: url('/fonts/maven-pro-light-300.otf')

@font-face
  font-family: main
  src: url('/fonts/signika-regular.ttf')

html, body
  height: 100%

body
  font-family: styled, helvetica
  //background-image: url('../images/Melamine-wood-004.png');

h1,h2,h3,h4,h5,h6,.h1,.h2,.h3,.h4,.h5,.h6
  font-family: styled, helvetica


/*      FIXING BOOTSTRAP */
body.modal-open, .modal-open .navbar-fixed-top, .modal-open .navbar-fixed-bottom
  margin-right: 0

textarea:hover, 
input:hover, 
textarea:active, 
input:active, 
textarea:focus, 
input:focus
a:focus,
.btn:focus
     outline:0px !important
     -webkit-appearance:none
.btn[disabled=disabled], .btn:disabled
  opacity: 0.2


/*      COZY BUTTONS    */
.btn
  &.btn-cozy
    background-color: basecolor
    border-color: basecolor
    color: white

    &:hover
      background-color: actioncolor
      border-color: actioncolor

  &.btn-cozy-contrast
    background-color: contrastcolor
    border-color: contrastcolor
    color: white

    &:hover
      background-color: actioncolor
      border-color: actioncolor

a
  cursor: pointer


/*      INPUTS          */
input
    border: 1px solid #ccc
    color: #ccc
input:focus
    color: #333
    border-color: basecolor

::selection
    background: actioncolor
::-moz-selection
    background: actioncolor

input#search-box
    height: 35px
    font-size: 16px
    margin-left: 5px
    width: 200px
    background-image: url("../images/iconmonstr-magnifier-icon-18.png")
    background-repeat: no-repeat 
    background-position: 5px 8px

.form-control
    min-height: 34px
    height: auto


/*      SHADOWS         */
.content-shadow
    background-color: white
    box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.1)
    height: 100%

.shadow-down
    box-shadow: 1px 1px 2px 0 rgba(0,0,0,0.1)


/*      AFFIX           */
div#affixbar
  height: 45px
  z-index: 100
  width: 100%
  position: fixed

  .row
    background-color: white
    padding-top: 15px

    p
      margin-bottom: 5px

  a.btn
    height: 35px

  img
    height: 20px
    color: #C60

.affix-top
  color: blue

.affix
  position: fixed
  color: yellow

  .row
    -moz-box-shadow:    0 5px 7px 0 rgba(0,0,0,0.2);
    -webkit-box-shadow: 0 5px 7px 0 rgba(0,0,0,0.2);
    box-shadow:         0 5px 7px 0 rgba(0,0,0,0.2);

#content
  padding-top: 45px


/*      ITEMS           */
table#table-items
  margin-top: 20px

  .unactive 
    opacity: 0.5

tr.folder-row

  // colors change on hover
  color: mediumcolor
  &:hover
    color: mediumcolor-contrast

    .glyphicon.no-hover
      color: mediumcolor

    .file-path
      color: mediumcolor

  // the filename
  .caption
    font-size: 18px
    padding: 0
    margin-left: 10px
    margin-right: 10px

  // the toolbox - delete, rename, etc
  .operations
    font-size: 18px
    visibility: hidden
    display: inline-block
    a
      padding-left: 5px

  .img-folder
    img  
      width: 20px
      margin-right: -3px

  .img-file
    img  
      width: 20px
      margin-right: -3px  

  .icon
    font-size: 14px

  &:hover .operations
    visibility: visible

    a
      color: lightgray

    a:hover
      color: mediumcolor-contrast

    a:active
      color: actioncolor

  .file-date, .file-size, .file-type
    padding-top: 13px

.visible-lg.visible-md.visible-inline
  display: inline!important


/*      BREADCRUMBS     */
#crumbs
  overflow: hidden
  img
    height: 25px
    margin-top: 0px
    margin-left:-5px
    margin-right:-5px
  ul
    margin-top: 10px
    margin-bottom: 0px
    padding-left: 0
    list-style none
    display inline-table
    li
      display inline
      a
        display block
        float left
        height 35px
        background basecolor
        text-align center
        padding 8px 5px 0 22px
        position relative
        margin 10px 5px 0 0
        font-size 15px
        text-decoration none
        color #fff
        &:after
          content ""
          border-top 17px solid transparent
          border-bottom 17px solid transparent
          border-left 17px solid basecolor
          position absolute
          right -17px
          top 0
          z-index 1
        &:before
          content ""
          border-top 17px solid transparent
          border-bottom 17px solid transparent
          border-left 17px solid white
          position absolute
          left 0
          top 0
        &:hover
          background actioncolor
          &:after
            border-left-color actioncolor    
      &:first-child
        a
          padding-left: 20px
          border-top-left-radius 10px
          border-bottom-left-radius 10px
          &:before
            display none
      &:last-child
        a
          padding-right 20px
          border-top-right-radius 10px
          border-bottom-right-radius 10px
          &:after
            display none

.table
  .tbody
    .td
      span
        display none

.table-headers
    span
        line-height: 30px

    .btn
        top: -2px

- var prefix;
if isPublic
  - prefix = '../assets/'
else
  - prefix = '../'

doctype
html
  head
    title 404 - File not found
    link(rel="stylesheet", type="text/css", href="#{prefix}stylesheets/app-f13d0006.css", media="all")
    link(rel="stylesheet", type="text/css", href="#{prefix}stylesheets/clippy.css", media="all")

  body.error-404
    .container
      .row
        .col-lg-12.error-frame
          p.headline= localization.t('404 headline')
          p= localization.t('404 option a')
          p= localization.t('404 option separator')
          p= localization.t('404 option b')

    script(src="#{prefix}javascripts/vendor-41327043.js")
    script(src="#{prefix}javascripts/clippy.min.js")
    script.
      console.log("#{prefix}");
      clippy.load('Clippy', function(agent) {
        agent.show()
        agent.speak("#{localization.t('404 clippy sorry')}");
        setTimeout(function() {
          agent.speak("#{localization.t('404 clippy contact')}");
          setTimeout(function() {
            agent.play("SendMail");
            setInterval(function() {
              agent.animate();
            }, 15000);
          }, 5000);
        }, 5000);

      });
doctype
html
  head
    title 404 - File not found
    link(rel="stylesheet", type="text/css", href="stylesheets/app-10525a16.css", media="all")
    link(rel="stylesheet", type="text/css", href="stylesheets/clippy.css", media="all")

  body.error-404
    .container
      .row
        .col-lg-12.error-frame
          p.headline= localization.t('404 headline')
          p= localization.t('404 option a')
          p= localization.t('404 option separator')
          p= localization.t('404 option b')

    script(src="javascripts/vendor-c0eb7a5a.js")
    script(src="javascripts/clippy.min.js")
    script.
      clippy.load('Clippy', function(agent) {
        agent.show()
        agent.speak("#{localization.t('404 clippy sorry')}");
        setTimeout(function() {
          agent.speak("#{localization.t('404 clippy contact')}");
          setTimeout(function() {
            agent.play("SendMail");
            setInterval(function() {
              agent.animate();
            }, 15000);
          }, 5000);
        }, 5000);

      });
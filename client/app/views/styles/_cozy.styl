orange = #fe8800
blue = #34A6FF
bluegreen = #34A6BB

@font-face
    font-family: styled
    src: url('../fonts/maven-pro-light-300.otf');

@font-face
    font-family: main
    src: url('../fonts/source-sans-pro.ttf');

a
    color: blue

a:hover
    color: orange

input
select
textarea
    border: 1px solid blue
    border-radius: 0
    font-family: styled

input:focus
select:focus
textarea:focus
    border: 1px solid blue

input:hover
select:hover
textarea:hover
    border: 1px solid orange

input:active
select:active
textarea:active
    box-shadow: none


.button
    border: 0
    background: blue
    color: white
    box-shadow: none
    text-shadow: none
    border-radius: 0
    font-family: main
    font-weight: bold
    padding: 10px
    cursor: pointer
    border-radius: 5px

.button:hover
    background: orange
    border: 0
    color: white
    text-decoration: none

.button:active
    background: orange - 3%
    border: 0
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)
    color: white
    outline: 0

.button:focus
    outline: 0

.button.disabled
.button.disabled:hover
.button.disabled:active
.button.disabled:focus
    background-color: grey
    padding: 10px
    cursor: default
    text-decoration: none

.button.toggled
    background-color: blue - 20%
    box-shadow: 1px 3px 2px rgba(0, 0, 0, 0.2) inset, 0 1px 2px rgba(0, 0, 0, 0.0)

.minor-button
    padding: 10px

.modal-header
    font-family: styled
    font-size: 26px
    padding: 20px
    border-top-left-radius: 5px
    border-top-right-radius: 5px

.modal-body
    font-family: main

    input
    select
    textarea
        border: 1px solid #CCC
        border-radius: 0
        font-family: styled

        &:hover
            border: 1px solid orange

        &:focus
            border: 1px solid blue
            box-shadow: none

        &:active
            border: 1px solid #CCC
            box-shadow: none

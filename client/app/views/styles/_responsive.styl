@media (max-width: 520px)
    // Landscape phones and down

    body
        text-rendering optimizeSpeed

    #content
        padding-top 10px

    .table-headers
        display none

    tr.folder-row .caption
        font-size 14px

    #affixbar
        #search-box
            display none

        .pull-right
            display block

        #upload-buttons
            a
                display inline-block
            .btn
                padding 6px 4px

    #crumbs
        li
            a
                padding: 5px


    .modal-dialog
        max-width: 100%
        width: 100%

        #share-list li select.change-perm
            display block

        #share-list img
            display: none

@media (max-width: 768px)
    // Landscape phone to portrait tablet

    body
        text-rendering optimizeSpeed

    .button-title-reponsive
        display none

    .type-column-cell
    .date-column-cell
    .size-column-cell
        display none


    tr.folder-row
        ul.tags
            display none

        .file-tags
        .file-delete
        .file-download
        .file-edit
        .file-share
        .file-move
            display none

    .btn-link
        white-space normal
        text-align left

    #crumbs
        ul
            li
                display none

            li:first-child
            li:last-child
                display inline

    #affixbar
        #search-box
            max-width 150px

        #upload-buttons
            #share-state
            #button-new-folder
                display none


@media (max-width: 900px)
    .date-column-cell
        display: none

    tr.folder-row
        ul.tags
            display: none
            margin-top: 5px

@media (max-width: 1000px)
    .size-column-cell
        display: none

    #folder-state
        .text
            display: none


@media (max-width: 1200px)
    // Portrait tablet to landscape and desktop

    .type-column-cell
        display: none

    .application
        .container
            margin: 0
            width: 100%
            max-width: 100%

// Fix bootstrap
@media (max-width: 768px)
    #container
        max-width: 100%
